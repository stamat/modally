{
  "scripts": [{
  "in": "build/iife.js",
  "out": "dist/modally.js",
  "options": {
    "sourcemap": true,
    "minify": true,
    "format": "iife",
    "target": "es2019"
  }
  }],
  "styles": [{
    "in": "modally.scss",
    "out": "dist/modally.css",
    "options": {
      "minify": true,
      "sourcemap": true
    }
  }],
  "banner": "/* {{ name }} v{{ version }} | {{ homepage }} | {{ license }} License */",
  "serve" : {
    "port": 4040,
    "base": "/"
    },
  "livereload": true,
  "watch": [
    "modally.mjs",
    "modally.scss",
    "index.html"
  ]
}
